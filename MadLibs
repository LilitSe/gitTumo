import random
templ = random.randint(1, 3) #selecting 1 of 3 templates
print(templ)
print("Let's go! Enjoy playing with words!")
if templ == 1:
    Number = input("Please type a number")
    Measure_of_time = input("Please type a measure of time")
    Mode_of_Transportation = input("Please type a mode of transportation")
    Adjective = input("Please type an adjective")
    Adjective2 = input("Please type another adjective")
    while True:
        if Adjective2 == Adjective:
            print("Please do not repeat your answer.")
            Adjective2 = input("Please type another adjective")
        break
    Noun = input("Please type a noun")
    Color = input("Please type a color")
    Part_of_the_Body = input("Please type a part of the body")
    Verb = input("Please type a verb")
    Number2 = input("Please type another number")
    while True:
        if Number2 == Number:
            print("Please do not repeat your answer.")
            Number2 = input("Please type another number")
        break
    Noun2 = input("Please type another noun")
    while True:
        if Noun2 == Noun:
            print("Please do not repeat your answer.")
            Noun2 = input("Please type another noun")
        break
    Noun3 = input("Please type another noun")
    while True:
        if Noun3 == Noun:
            print("Please do not repeat your answer.")
            Noun3 = input("Please type another noun")
        if Noun3 == Noun2:
            print("Please do not repeat your answer.")
            Noun3 = input("Please type another noun")
        break
    Part_of_the_Body_2 = input("Please type another part of the body")
    while True:
        if Part_of_the_Body_2 == Part_of_the_Body:
            print("Please do not repeat your answer.")
            Part_of_the_Body_2 = input("Please type another part of the body")
        break
    Noun4 = input("Please type another noun")
    while True:
        if Noun4 == Noun:
            print("Please do not repeat your answer.")
            Noun4 = input("Please type another noun")
        if Noun4 == Noun2:
            print("Please do not repeat your answer.")
            Noun4 = input("Please type another noun")
        if Noun4 == Noun3:
            print("Please do not repeat your answer.")
            Noun4 = input("Please type another noun")
        break
    Adjective3 = input("Please type another adjective")
    while True:
        if Adjective3 == Adjective:
            print("Please do not repeat your answer.")
            Adjective3 = input("Please type another adjective")
        if Adjective3 == Adjective2:
            print("Please do not repeat your answer.")
            Adjective3 = input("Please type another adjective")
        break
    Silly_Word = input("Please type a silly word")

    print("""It was about {} {} ago when I arrived at the hospital in a {}.""".format(Number, Measure_of_time, Mode_of_Transportation))
    print("""The hospital is a/an {} place, there are a lot of {} {} here.""".format(Adjective, Adjective2, Noun))
    print("""There are nurses here who have {} {}.""".format(Color, Part_of_the_Body))
    print("""If someone wants to come into my room I told them that they have to {} first.""".format(Verb))
    print("""I’ve decorated my room with {} {}.""".format(Number2, Noun2))
    print("""Today I talked to a doctor and they were wearing a {} on their {}.""".format(Noun3, Part_of_the_Body_2))
    print("""I heard that all doctors {} {} every day for breakfast.""".format(Verb, Noun4))
    print("""The most {} thing about being in the hospital is the {} {}!""".format(Adjective3,Silly_Word, Noun))

if templ == 2:
    Proper_Noun = input("Please type a Person’s Name")
    Noun = input("Please type a noun")
    Adjective = input("Please type a feeling")
    Verb = input("Please type a verb")
    Adjective2 = input("Please type another feeling")
    while True:
        if Adjective2 == Adjective:
            print("Please do not repeat your answer.")
            Adjective2 = input("Please type another feeling")
        break
    Animal = input("Please type an animal")
    Verb2 = input("Please type a verb")
    while True:
        if Verb2 == Verb:
            print("Please do not repeat your answer.")
            Verb2 = input("Please type another verb")
        break
    Color = input("Please type a color")
    Adverb = input("Please type an adverb ending in ly")
    Number = input("Please type a number")
    Measure_of_time = input("Please type a measure of time")
    Silly_Word = input("Please type a silly word")
    Noun2 = input("Please type another noun")
    while True:
        if Noun2 == Noun:
            print("Please do not repeat your answer.")
            Noun2 = input("Please type another noun")
        break

    print("This weekend I am going camping with {}".format(Proper_Noun))
    print("I packed my lantern, sleeping bag, and {}".format(Noun))
    print("I am so {} to {} in a tent.".format(Adjective, Verb))
    print("I am {} we might see a(n) {}, I hear they’re kind of dangerous.".format(Adjective2, Animal))
    print("While we’re camping, we are going to hike, fish, and {}.".format(Verb2))
    print("I have heard that the {} lake is great for {}.".format(Color, Verb+"ing"))
    print("Then we will {} hike through the forest for {} ({}).".format(Adverb, Number, Measure_of_time))
    print("If I see a {} {} while hiking, I am going to bring it home as a pet!".format(Color, Animal))
    print("At night we will tell {} {} stories and roast {} around the campfire!!".format(Number, Silly_Word, Noun2))

