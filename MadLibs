import random
templ = random.randint(1, 3) #selecting 1 of 3 templates
print(templ)
print("Let's go! Enjoy playing with words!")
if templ == 1:
    user_input = {"Number": input("Please type a number"),\
                  "Measure_of_time": input("Please type a measure of time"),\
                  "Mode_of_Transportation": input("Please type a mode of transportation"),\
                  "Adjective": input("Please type an adjective"),\
                  "Adjective2": input("Please type another adjective"),\
                  "Noun": input("Please type a noun"),\
                  "Color": input("Please type a color"),\
                  "Part_of_the_Body": input("Please type a part of the body"),\
                  "Verb": input("Please type a verb"),\
                  "Number2": input("Please type another number"),\
                  "Noun2": input("Please type another noun"),\
                  "Noun3": input("Please type another noun"),\
                  "Part_of_the_Body_2": input("Please type another part of the body"),\
                  "Noun4": input("Please type another noun"),\
                  "Adjective3": input("Please type another adjective"),\
                  "Silly_Word": input("Please type a silly word")}

    print(f'''It was about {user_input["Number"]} {user_input["Measure_of_time"]} ago when I arrived at the hospital in a {user_input["Mode_of_Transportation"]}.\
 The hospital is a/an {user_input["Adjective"]} place, there are a lot of {user_input["Adjective2"]} {user_input["Noun"]} here.\
 There are nurses here who have {user_input["Color"]} {user_input["Part_of_the_Body"]}.\
 If someone wants to come into my room I told them that they have to {user_input["Verb"]} first.\
 I’ve decorated my room with {user_input["Number2"]} {user_input["Noun2"]}.\
 Today I talked to a doctor and they were wearing a {user_input["Noun3"]} on their {user_input["Part_of_the_Body_2"]}.\
 I heard that all doctors {user_input["Verb"]} {user_input["Noun4"]} every day for breakfast.\
 The most {user_input["Adjective3"]} thing about being in the hospital is the {user_input["Silly_Word"]} {user_input["Noun"]}!''')


elif templ == 2:
    user_input = {"Proper_Noun": input("Please type a Person’s Name"),\
    "Noun": input("Please type a noun"),\
    "Adjective": input("Please type a feeling"),\
    "Verb": input("Please type a verb"),\
    "Adjective2": input("Please type another feeling"),\
    "Animal": input("Please type an animal"),\
    "Verb2": input("Please type a verb"), \
    "Verb3": input("Please type a verb ending in ing"),\
    "Color": input("Please type a color"),\
    "Adverb": input("Please type an adverb ending in ly"),\
    "Number": input("Please type a number"),\
    "Measure_of_time": input("Please type a measure of time"),\
    "Silly_Word": input("Please type a silly word"),\
    "Noun2": input("Please type another noun")}

    print(f'''This weekend I am going camping with {user_input["Proper_Noun"]}.\
 I packed my lantern, sleeping bag, and {user_input["Noun"]}.\
 I am so {user_input["Adjective"]} to {user_input["Verb"]} in a tent.\
 I am {user_input["Adjective2"]} we might see a(n) {user_input["Animal"]}, I hear they’re kind of dangerous.\
 While we’re camping, we are going to hike, fish, and {user_input["Verb2"]}.\
 I have heard that the {user_input["Color"]} lake is great for {user_input["Verb3"]}.\
 Then we will {user_input["Adverb"]} hike through the forest for {user_input["Number"]} {user_input["Measure_of_time"]}.\
 If I see a {user_input["Color"]} {user_input["Animal"]} while hiking, I am going to bring it home as a pet!".\
 At night we will tell {user_input["Number"]} {user_input["Silly_Word"]} stories and roast {user_input["Noun2"]} around the campfire!!''')

elif templ == 3:
    user_input = {"Proper_Noun": input("Please type a Person’s Name"),\
    "Adjective": input("Please type an adjective"),\
    "Color": input("Please type a color"),\
    "Animal": input("Please type an animal"),\
    "Place": input("Please type a place"),\
    "Adjective2": input("Please type another adjective"),\
    "Magical_Creature": input("Please type a name of a Magical Creature in plural"),\
    "Adjective3": input("Please type another adjective"),\
    "Magical_Creature2": input("Please type another name of a Magical Creature in plural"),\
    "Noun": input("Please type a noun"),\
    "Noun2": input("Please type another noun"),\
    "Noun3": input("Please type another noun"),\
    "Adjective4": input("Please type another adjective"),\
    "Noun4": input("Please type another noun"),\
    "Number": input("Please type a number"),\
    "Measure_of_time": input("Please type a measure of time"),\
    "Verb": input("Please type a verb ending in ing"),\
    "Adjective5": input("Please type another adjective"),\
    "Noun5": input("Please type another noun"),\
    "Room": input("Please type a name of a room in a house")}

    print(f'''Dear {user_input["Proper_Noun"]}, I am writing to you from a {user_input["Adjective"]} castle in an enchanted forest.
 I found myself here one day after going for a ride on a {user_input["Color"]} {user_input["Animal"]} in {user_input["Place"]}.
 There are {user_input["Adjective2"]} {user_input["Magical_Creature"]} and {user_input["Adjective3"]} {user_input["Magical_Creature2"]} here!
 In the {user_input["Room"]} there is a pool full of {user_input["Noun"]}.
 I fall asleep each night on a {user_input["Noun2"]} of {user_input["Noun3"]} and dream of {user_input["Adjective4"]} {user_input["Noun4"]}.
 It feels as though I have lived here for {user_input["Number"]} {user_input["Measure_of_time"]}.
 I hope one day you can visit, although the only way to get here now is {user_input["Verb"]} on a {user_input["Adjective5"]} {user_input["Noun5"]}!!''')
